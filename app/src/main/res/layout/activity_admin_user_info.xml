<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010A43"
    tools:context=".AdminUserInfoActivity">

    <TextView
        android:id="@+id/tv_userInfoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="임세현님"
        android:textColor="#EEEEEE"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_userInfoUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="saehyun20"
        android:textColor="#88EEEEEE"
        app:layout_constraintEnd_toEndOf="@+id/tv_userInfoName"
        app:layout_constraintStart_toStartOf="@+id/tv_userInfoName"
        app:layout_constraintTop_toBottomOf="@+id/tv_userInfoName" />

    <TextView
        android:id="@+id/tv_userInfoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="유저 고유값 : 1"
        android:textColor="#EEEEEE"
        app:layout_constraintEnd_toEndOf="@+id/tv_userInfoUserName"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/tv_userInfoUserName"
        app:layout_constraintTop_toBottomOf="@+id/tv_userInfoUserName" />

    <TextView
        android:id="@+id/tv_userInfoAuthority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="권한 : ROLE_ADMIN"
        android:textColor="#EEEEEE"
        app:layout_constraintEnd_toEndOf="@+id/tv_userInfoId"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/tv_userInfoId"
        app:layout_constraintTop_toBottomOf="@+id/tv_userInfoId" />

    <ImageButton
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:id="@+id/userInfo_ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ig_back" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="User Info"
        android:textColor="#EEEEEE"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_userInfoAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="계좌 번호 : 123456789"
        android:textColor="#EEEEEE"
        app:layout_constraintEnd_toEndOf="@+id/tv_userInfoAuthority"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="@+id/tv_userInfoAuthority"
        app:layout_constraintTop_toBottomOf="@+id/tv_userInfoAuthority" />

    <TextView
        android:id="@+id/tv_userInfoBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="잔액 : 10,000"
        android:textColor="#EEEEEE"
        app:layout_constraintEnd_toEndOf="@+id/tv_userInfoAccount"
        app:layout_constraintStart_toStartOf="@+id/tv_userInfoAccount"
        app:layout_constraintTop_toBottomOf="@+id/tv_userInfoAccount" />

    <EditText
        android:id="@+id/et_editMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:gravity="center"
        android:hint="금액 입력"
        android:inputType="number"
        android:textColorHint="#EEEEEE"
        app:layout_constraintBottom_toTopOf="@+id/imageView41"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView41"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/blackbox" />

    <TextView
        android:id="@+id/tv_editBalance"
        android:layout_width="151dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="잔액 설정"
        android:textColor="#EEEEEE"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView41"
        app:layout_constraintEnd_toEndOf="@+id/imageView41"
        app:layout_constraintStart_toStartOf="@+id/imageView41"
        app:layout_constraintTop_toTopOf="@+id/imageView41" />

</androidx.constraintlayout.widget.ConstraintLayout>